type User {
	id: ID! @id
	name: String!
	email: String! @unique
	password: String!
	club: String!
	permissions: [Permission!]! @scalarList(strategy: RELATION)
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type Activity {
	id: ID! @id
	ActivityType: ActivityType!
	title: String!
	date: DateTime
	user: User! @relation
	distance: Float!
	distance_unit: Unit!
	duration: Float!
	elevation: Float
	elevation_unit: Unit
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

enum Permission {
	ADMIN
	CLUB_ADMIN
	USER
	FRIEND
}

enum ActivityType {
	CYCLING
	RUNNING
}

enum Unit {
	MILES
	KM
	FEET
	METERS
}
