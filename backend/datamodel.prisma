type User {
	id: ID! @id
	name: String!
	email: String! @unique
	password: String!
	club: String!
	permissions: [Permission!]! @scalarList(strategy: RELATION)
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type DataMetric {
	id: ID! @id
	dataName: String! @unique
	dataUnit: [DataUnit!]! @relation(name: "All_units")
	stdDataUnit: DataUnit! @relation(name: "Std_unit")
}

type DataUnit {
	id: ID! @id
	name: String!
	factor: Float!
	standardUnit: Boolean!
}

type DataRecord {
	id: ID! @id
	session: Session!
	user: User!
	value: String!
	dataUnit: DataUnit!
}

type Activity {
	id: ID! @id
	name: String!
	dataFields: [DataMetric!]! @scalarList(strategy: RELATION)
}

type Session {
	id: ID! @id
	date: String!
	name: String!
	user: User!
	activityType: Activity!
	dataValues: [DataRecord!]! @scalarList(strategy: RELATION)
}

enum Permission {
	ADMIN
	CLUB_ADMIN
	USER
	FRIEND
}
